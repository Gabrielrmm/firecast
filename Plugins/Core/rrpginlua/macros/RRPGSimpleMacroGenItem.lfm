<?xml version="1.0" encoding="UTF-8"?>
<form name="frmGerenciarSimpleMacrosItem" title="Gerenciar Plugins" height="30" margins="{top=1, bottom=1}">
	<import file="../interfaceUtils.xml"/>
	
	
	<script><![CDATA[
		local function editarMacro()
			local frm = self:findControlByName("frmGerenciarSimpleMacros");
			
			if frm ~= nil then
				frm.editarMacroNode(sheet);
			end;
		end;
		]]>
	</script>
	
	<layout align="client" margins="{top=2, left=2}" g-cnt-vert-align="center" g-cnt-gutter="4">
		<label g="col" g-width="12" name="labMacro"/>
		<button g="block" g-dyn-width-txt="true" g-dyn-height-txt="true" name="btnEdit" text="@@macros.ui.editButton" onClick="editarMacro();" g-min-width="75" padding="{left=10, right=10}"/>
	</layout>
	
	<horzLine align="bottom" margins="{top=2}"/>
	
	<dataLink field="macro">
		<event name="onChange">
			self.labMacro.text = sheet.macro or "(" .. lang("macros.ui.emptyMacro") ..")";
		</event>
	</dataLink>
	
	<script>
		self.labMacro.text = "(" .. lang("macros.ui.emptyMacro") ..")";
	</script>
</form>